    "paths": {
        "/api/payment/create": {
            "post": {
                "tags": [
                    "Payment"
                ],
                "summary": "Create PayPal payment",
                "description": "Initiates a PayPal payment for an order",
                "operationId": "a34aaea65acbeaec9cac8657c043d8ec",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "order_id"
                                ],
                                "properties": {
                                    "order_id": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Payment initiated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "approval_url": {
                                            "type": "string",
                                            "example": "https://www.sandbox.paypal.com/checkoutnow?token=..."
                                        },
                                        "paypal_order_id": {
                                            "type": "string",
                                            "example": "5O190127TN364715T"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid order or already paid"
                    },
                    "500": {
                        "description": "PayPal error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/payment/success": {
            "get": {
                "tags": [
                    "Payment"
                ],
                "summary": "PayPal success callback",
                "description": "Handles successful PayPal payment callback",
                "operationId": "c7b0a675f18ccf554c07fd353e867e4d",
                "parameters": [
                    {
                        "name": "token",
                        "in": "query",
                        "description": "PayPal token",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "order_id",
                        "in": "query",
                        "description": "Order ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Payment successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Payment successful."
                                        },
                                        "data": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Payment failed"
                    }
                }
            }
        },
        "/api/payment/cancel": {
            "get": {
                "tags": [
                    "Payment"
                ],
                "summary": "PayPal cancel callback",
                "description": "Handles cancelled PayPal payment",
                "operationId": "2e6f9979c3420ad92f1ca3b9a4fd6aa1",
                "responses": {
                    "200": {
                        "description": "Payment cancelled",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Payment cancelled."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/posts": {
